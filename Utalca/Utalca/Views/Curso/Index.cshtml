@model IEnumerable<Utalca.ControlAsistencia.Curso>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Cursos";
}

    <div class="wrapper"> </div>
    <section class="page-title bg-gray padd-tb-10 ">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 ">
                    <div class="pull-left">
                        <h3>Cursos</h3>
                    </div>
                    <ol class="breadcrumb pull-right hidden-xs">
                        <li>
                            <a href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="active">Cursos </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

<div class="container">
    <section class="padd-tb-30 ">
        <div class="container">
            <div class="row">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Creditos)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Seccion)</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Creditos)
                                </td>
                                <td>
                                    @Html.ActionLink(item.Nombre, "Details", new { id = item.ID }, new { @class = "karinita-link" })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Seccion)
                                </td>
                            </tr>
                        }


                    </table>
                </div>






            </div>
        </div>
    </section>





</div>

